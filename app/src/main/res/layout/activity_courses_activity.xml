<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="karanbatra.com.swipestudentinfo.Courses_activity">

<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COURSES"
        android:textStyle="bold"
        android:textSize="50sp"
        android:gravity="center"
        android:id="@+id/course1"
        android:layout_marginTop="30dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PHP"
            android:id="@+id/course_php"
            android:textSize="30sp"
            android:onClick="php"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$Laravel"
            android:textStyle="italic"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$Web Development"
            android:textStyle="italic"
            android:textSize="20sp"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JAVA"
            android:layout_marginTop="10dp"
            android:id="@+id/Course_java"
            android:textSize="30sp"
            android:onClick="php"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$Core Java"
            android:textStyle="italic"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$Advance Java"
            android:textStyle="italic"
            android:textSize="20sp"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MOBILE DEVELOPMENT"
            android:onClick="php"
            android:id="@+id/Course_mobile"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$Android"
            android:textStyle="italic"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$IOS"
            android:textStyle="italic"
            android:textSize="20sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GAME DEVELOPMENT"
            android:onClick="php"
            android:id="@+id/Course_game"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            />


    </LinearLayout>
</LinearLayout>

</ScrollView>
